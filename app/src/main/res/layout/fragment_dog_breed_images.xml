<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.ui.DogBreedImagesFragment">

    <me.mking.doggodex.presentation.ui.DogBreedImagesRecyclerView
        android:id="@+id/dogBreedImagesRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/dog_breed_image_recycler_item" />

    <ProgressBar
        android:id="@+id/dogBreedImagesProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <me.mking.doggodex.presentation.ui.LoadingErrorView
        android:id="@+id/loadingError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>